# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/texco_db
MONGODB_TEST_URI=mongodb://localhost:27017/texco_test

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# JWT
# ============================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRE=7d

# ============================================
# CLOUDINARY (For Excel Reports Upload)
# ============================================
# Format: cloudinary://api_key:api_secret@cloud_name
# Example: cloudinary://123456789:abcdefghijklmnop@mycloud
# Get from: https://cloudinary.com/console/settings/api-keys
CLOUDINARY_URL=cloudinary://YOUR_API_KEY:YOUR_API_SECRET@YOUR_CLOUD_NAME

# Alternative: Individual Cloudinary settings (if CLOUDINARY_URL not set)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@texco.com

# ============================================
# AWS S3 (Optional - alternative to Cloudinary)
# ============================================
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=texco-reports

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# ============================================
# REPORT GENERATION
# ============================================
# Use Cloudinary for reports (true/false)
USE_CLOUDINARY=true
# Local reports directory (if USE_CLOUDINARY=false)
REPORTS_DIR=./reports
